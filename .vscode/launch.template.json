{
    "version": "0.2.0",
    "configurations":
    [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles":
            [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\main.js",
            "env": 
            {
                "node_env": "cloud",
                "GOOGLE_APPLICATION_CREDENTIALS": "[YOUR_PATH]/secret-manager-access.json"
            }
        }
    ]
}